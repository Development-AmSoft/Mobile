<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgCheck"
            android:layout_width="36px"
            android:layout_height="36px"
            android:paddingRight="3dip" />

        <TextView
            android:id="@+id/txtDescricao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="DESCRICAO"
            android:textColor="@color/all_black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblCodigo"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CÃ³d.: "
            android:textColor="@color/titulo" />

        <TextView
            android:id="@+id/txtCodigo"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00000"
            android:textColor="@color/all_black" />

        <TextView
            android:id="@+id/lblQtde"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Qtde: "
            android:textColor="@color/titulo" />

        <TextView
            android:id="@+id/txtQtde"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="2dip"
            android:text="0.00"
            android:textColor="@color/all_black" />

        <TextView
            android:id="@+id/lblRsFinal"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="2dip"
            android:text="R$ Final: "
            android:textColor="@color/titulo" />

        <TextView
            android:id="@+id/txtValorFinal"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="2dip"
            android:text="0.00"
            android:textColor="@color/cor_azul"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblAcrescimo"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Acre: "
            android:textColor="@color/titulo" />

        <TextView
            android:id="@+id/txtAcrescimo"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="2dip"
            android:text="0.00"
            android:textColor="@color/cor_verde" />

        <TextView
            android:id="@+id/lblDesconto"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Desc: "
            android:textColor="@color/titulo" />

        <TextView
            android:id="@+id/txtDesconto"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="2dip"
            android:text="0.00"
            android:textColor="@color/cor_vermelho" />

        <TextView
            android:id="@+id/lblTotalll"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total R$: " 
            android:textColor="@color/titulo" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="2dip"
            android:text="0.00"
            android:textColor="@color/all_black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblST"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ST+IPI:"
            android:textColor="@color/titulo" />

        <TextView
            android:id="@+id/txtST"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="2dip"
            android:text="0.00"
            android:textColor="@color/cor_verde" />

        <TextView
            android:id="@+id/lblValor"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="2dip"
            android:text="R$ Cad.: "
            android:textColor="@color/titulo" />

        <TextView
            android:id="@+id/txtValor"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="2dip"
            android:text="0.00"
            android:textColor="@color/all_black" />

        <TextView
            android:id="@+id/lblST"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tot.+ST+IPI: "
            android:textColor="@color/titulo" />

        <TextView
            android:id="@+id/txtValorST"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="2dip"
            android:text="0.00"
            android:textColor="@color/all_black"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>