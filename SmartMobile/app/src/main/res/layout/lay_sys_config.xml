<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conteudo_sombra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_width="fill_parent"
                android:layout_height="30px"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textLimi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IP Servidor Web: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/all_black" />

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="48dip"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/txtServerOnline"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/btnSaveIP"
                        android:layout_width="45dip"
                        android:layout_height="45dip"
                        android:layout_gravity="right"
                        android:background="@drawable/botao_salve"
                        android:cropToPadding="false"
                        android:paddingLeft="10dp"
                        android:scaleType="fitCenter" >
                    </ImageButton>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Banco de Dados: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/all_black" />

                <EditText
                    android:id="@+id/txtBanco"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Empresa: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/all_black" />

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="48dip"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/cmbEmpresa"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/btnConsEmpresa"
                        android:layout_width="45dip"
                        android:layout_height="45dip"
                        android:layout_gravity="right"
                        android:background="@drawable/botao_filtro"
                        android:cropToPadding="false"
                        android:paddingLeft="10dp"
                        android:scaleType="fitCenter" >
                    </ImageButton>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vendedor: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/all_black" />

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="48dip"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/cmbVendedor"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/btnConsVendedor"
                        android:layout_width="45dip"
                        android:layout_height="45dip"
                        android:layout_gravity="right"
                        android:background="@drawable/botao_filtro"
                        android:cropToPadding="false"
                        android:paddingLeft="10dp"
                        android:scaleType="fitCenter" >
                    </ImageButton>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="48dip" >

            <TableLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:stretchColumns="1" >

                <TableRow>

                   

                    <Button
                        android:id="@+id/btnTestar"
                        android:layout_width="120dip"
                        android:layout_height="48dip"
                        android:layout_alignParentTop="true"
                        android:drawableLeft="@drawable/ico_opcoes"
                        android:gravity="left"
                        android:scaleType="fitCenter"
                        android:text="Demo"
                        android:visibility="invisible" >
                    </Button>
                  

                </TableRow>
            </TableLayout>
   <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center" >

                        <Button
                            android:id="@+id/btnImplantar"
                            android:layout_width="200dip"
                            android:layout_height="100dip"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/botao_implantar"
                            android:paddingTop="5dp" />
                    </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>