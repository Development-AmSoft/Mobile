                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/lblST1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Valor+ST: "
                        android:textColor="@color/titulo" />

                    <TextView
                        android:id="@+id/txtST1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingRight="0dip"
                        android:textColor="@color/all_black" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/lblUN1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:text="Un: "
                            android:textColor="@color/titulo" />

                        <TextView
                            android:id="@+id/txtUN1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.2"
                            android:text="KG"
                            android:textColor="@color/all_black"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/lblEstoque1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:text="Estoque: "
                            android:textColor="@color/titulo" />

                        <TextView
                            android:id="@+id/txtEstoque1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.8"
                            android:gravity="left"
                            android:paddingRight="0dip"
                            android:text="0000.00"
                            android:textColor="@color/all_black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/lblGrupo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="Grupo: "
                    android:textColor="@color/titulo" />

                <TextView
                    android:id="@+id/txtGrupo1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="xxxxxx"
                    android:textColor="@color/all_black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/valorListaLinear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:text="Lista:"
                            android:textColor="@color/titulo" />

                        <TextView
                            android:id="@+id/nomeLista1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.7"
                            android:gravity="left"
                            android:paddingRight="0dip"
                            android:text="0 - Indefinida [+ 0.00%]"
                            android:textColor="@color/all_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/TextView06"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:text="Valor Lista R$: "
                            android:textColor="@color/titulo" />

                        <TextView
                            android:id="@+id/valorLista1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.8"
                            android:gravity="left"
                            android:paddingRight="0dip"
                            android:text="0000.00"
                            android:textColor="@color/all_black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProdutoJaAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

           <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Últ. Ped.: "
                        android:textColor="@color/titulo" />

                    <TextView
                        android:id="@+id/dataJaAdd"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingRight="0dip"
                        android:text="25/11/1988"
                        android:textColor="@color/all_black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qtde.: "
                        android:textColor="@color/titulo" />

                    <TextView
                        android:id="@+id/qtdeJaAdd"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
