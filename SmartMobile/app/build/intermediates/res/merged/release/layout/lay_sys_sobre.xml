<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conteudo_sombra"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Versão do Sistema"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/titulo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V. "
                    android:textColor="@color/textoSimples" />
                
                <TextView
                    android:id="@+id/txtVersao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V. sistema"
                    android:textColor="@color/textoSimples" />

                

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clique "
                    android:textColor="@color/textoSimples" />

                <TextView
                    android:id="@+id/linkSobre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:linksClickable="true"
                    android:text="@string/link"
                    android:textColor="@color/textoLaranja"
                    android:textColorLink="@color/textoLaranja" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" para atualizar"
                    android:textColor="@color/textoSimples" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtVersao3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android V."
                android:textColor="@color/textoSimples" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desenvolvido por:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/titulo" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AmSoft - Soluções em Software"
                android:textColor="@color/textoLaranja" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="contato@amsoft.com.br"
                android:textColor="@color/textoSimples" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pato Branco - PR"
                android:textColor="@color/textoSimples" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/www"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="www."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/titulo"
                    android:textColorLink="@color/titulo" />

                <TextView
                    android:id="@+id/nome_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="amsoft"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/titulo"
                    android:textColorLink="@color/titulo" />

                <TextView
                    android:id="@+id/com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=".com.br"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/titulo"
                    android:textColorLink="@color/titulo" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo_v2" />
        </LinearLayout>
    </LinearLayout>

