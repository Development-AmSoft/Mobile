<?xml version="1.0" encoding="utf-8"?>
<!-- row.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/all_white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imgSituacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:layout_marginRight="3dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="2dip"
        android:paddingTop="2dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="6dip"
            android:paddingTop="4dip" >

            <TextView
                android:id="@+id/txtData"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="01/01/2012 08:40"
                android:textColor="@color/all_black" />

            <TextView
                android:id="@+id/txtReferencia"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="2dip"
                android:text="REFERÊNCIA"
                android:textColor="@color/all_black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="6dip"
            android:paddingTop="4dip" >

            <TextView
                android:id="@+id/lblAcrescimo"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Acrés:"
                android:textColor="@color/all_black" />

            <TextView
                android:id="@+id/txtAcrescimo"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="0.00"
                android:textColor="@color/cor_azul" />

            <TextView
                android:id="@+id/lblDesconto"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="2dip"
                android:text="Desc:"
                android:textColor="@color/all_black" />

            <TextView
                android:id="@+id/txtDesconto"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="0.00"
                android:textColor="@color/cor_vermelho" />

            <TextView
                android:id="@+id/lblSaldo"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="6dip"
                android:text="Saldo:"
                android:textColor="@color/all_black" />

            <TextView
                android:id="@+id/txtSaldo"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingRight="3dip"
                android:text="0.00"
                android:textColor="@color/all_black" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/SVN/SmartMobile-AndroidStudio/SmartMobile/app/src/main/res/layout/lay_cons_saldo_linha.xml -->