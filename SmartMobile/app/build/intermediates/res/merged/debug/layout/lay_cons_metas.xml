<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conteudo_sombra"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/all_white"
        android:orientation="vertical"
        android:paddingTop="3dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/topo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/titulo_border"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="Metas"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/all_white" />

            <ListView
                android:id="@+id/SCHEDULE"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/secundario"
                android:divider="#6c6c6c"
                android:dividerHeight="1dp"
                android:gravity="center_horizontal"
                android:horizontalSpacing="5dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" >
            </ListView>

            <LinearLayout
                android:id="@+id/secundario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topo"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/botton_border_titulo"
                android:paddingBottom="3dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MÃªs"
                    android:textColor="@color/all_black" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Metas"
                    android:textColor="@color/all_black" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Total"
                    android:textColor="@color/all_black" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/InnerRelativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/lblStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingBottom="2dip"
                    android:layout_weight="1"
                    android:text="Total Faturado: R$ "
                    android:textColor="@color/titulo" />

                <TextView
                    android:id="@+id/lblStatusValor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                     android:layout_weight="1"
                    android:paddingBottom="2dip"
                    android:text="0"
                    android:textColor="@color/titulo" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

