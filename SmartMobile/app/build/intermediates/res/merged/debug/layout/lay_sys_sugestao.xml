<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conteudo_sombra"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/corpoMensagemAntiga"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/caixa_border"
                    android:orientation="vertical"
                    android:padding="5dp" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enviado:"
                            android:textColor="@color/all_black"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Data: "
                                android:textColor="@color/all_black"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/dataAntiga"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DATA"
                                android:textColor="@color/all_laranja"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/mensagemAntiga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CORPO MENSAGEM"
                            android:textColor="@color/all_laranja"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/caixa_border"
                    android:orientation="vertical"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recebido: "
                        android:textColor="@color/all_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/resposta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="CORPO MENSAGEM"
                        android:textColor="@color/all_laranja"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linhEscura"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="#50000000"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fixoSugestao"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/corpoMensagemAntiga"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:id="@+id/tituloResposta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Envie sua sugestÃ£o para que possamos melhorar."
                    android:textColor="@color/all_black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtSugestao"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:ems="10"
                    android:inputType="textMultiLine" >

                    <requestFocus />
                </EditText>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100" >

                    <Button
                        android:id="@+id/btnVoltar"
                        android:layout_width="0dip"
                        android:layout_height="48dip"
                        android:layout_weight="50"
                        android:drawableLeft="@drawable/ico_voltar"
                        android:scaleType="fitCenter"
                        android:text="Voltar"
                        android:textColor="@color/all_black" >
                    </Button>

                    <Button
                        android:id="@+id/btnSalvar"
                        android:layout_width="0dip"
                        android:layout_height="48dip"
                        android:layout_weight="50"
                        android:drawableRight="@drawable/ico_salvar"
                        android:scaleType="fitCenter"
                        android:text="Enviar"
                        android:textColor="@color/all_black" >
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

